<ScrollPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LoginscreenController">
   <content>
      <AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0">
         <children>
            <Pane prefHeight="600.0" prefWidth="350.0" styleClass="login-sidebar" stylesheets="@../design/design.css">
               <children>
                  <ImageView fitHeight="249.0" fitWidth="256.0" layoutX="40.0" layoutY="23.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/ziraat-bankasi-black-vector-logo.png" />
                     </image>
                  </ImageView>
                  <Label layoutX="10.0" layoutY="279.0" text="Ziraat Bank" textFill="#f2e9e9">
                     <font>
                        <Font name="Fira Sans Ultra" size="58.0" />
                     </font>
                  </Label>
                  <Label layoutX="197.0" layoutY="352.0" text="Client Software" textFill="#f2e9e9">
                     <font>
                        <Font name="FreeSans Bold" size="19.0" />
                     </font>
                  </Label>
                  <Label layoutX="93.0" layoutY="562.0" text="All Rights Reserved" textFill="#f2e9e9">
                     <font>
                        <Font name="FreeSans Bold" size="15.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Pane fx:id="main_area" layoutX="350.0" prefHeight="600.0" prefWidth="450.0" styleClass="login-main" stylesheets="@../design/design.css">
               <children>
                  <Label layoutX="60.0" layoutY="43.0" text="Welcome">
                     <font>
                        <Font name="Fira Sans Condensed SemiBold" size="47.0" />
                     </font>
                  </Label>
                  <Label layoutX="64.0" layoutY="102.0" text="Login below to access your account">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <JFXTextField fx:id="accountno" labelFloat="true" layoutX="70.0" layoutY="170.0" prefHeight="30.0" prefWidth="300.0" promptText="Account No">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </JFXTextField>
                  <JFXPasswordField fx:id="pin" labelFloat="true" layoutX="70.0" layoutY="252.0" prefHeight="30.0" prefWidth="300.0" promptText="PIN">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </JFXPasswordField>
                  <Button layoutX="250.0" layoutY="300.0" mnemonicParsing="false" onMouseClicked="#forgotPassword" styleClass="login-forgot" stylesheets="@../design/design.css" text="Fogot Password">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Button>
                  <Button layoutX="125.0" layoutY="419.0" mnemonicParsing="false" onMouseClicked="#loginAccount" prefHeight="40.0" prefWidth="200.0" styleClass="login-button" stylesheets="@../design/design.css" text="Login">
                     <font>
                        <Font size="19.0" />
                     </font>
                  </Button>
                  <Button layoutX="99.0" layoutY="529.0" mnemonicParsing="false" onMouseClicked="#createAccount" prefHeight="35.0" prefWidth="250.0" styleClass="login-button" stylesheets="@../design/design.css" text="   Create new account">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Label layoutX="211.0" layoutY="484.0" text="OR">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <FontAwesomeIcon iconName="CLOSE" layoutX="430.0" layoutY="18.0" onMouseClicked="#closeApp" size="18" styleClass="close-button" />
                  <FontAwesomeIcon iconName="USER" layoutX="45.0" layoutY="192.0" size="18" />
                  <FontAwesomeIcon iconName="USER" layoutX="176.0" layoutY="445.0" size="16" />
                  <FontAwesomeIcon iconName="PENCIL" layoutX="118.0" layoutY="552.0" size="16" />
                  <FontAwesomeIcon iconName="EYE" layoutX="45.0" layoutY="274.0" size="18" />
