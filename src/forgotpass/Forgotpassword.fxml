<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<ScrollPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="forgotpass.ForgotpasswordController">
   <content>
      <AnchorPane prefHeight="600.0" prefWidth="450.0">
         <children>
            <FontAwesomeIcon iconName="CLOSE" layoutX="426.0" layoutY="24.0" onMouseClicked="#closeApp" size="20" styleClass="close-button" />
            <FontAwesomeIcon iconName="ARROW_LEFT" layoutX="15.0" layoutY="26.0" onMouseClicked="#backToLogin" size="20" />
            <Label layoutX="97.0" layoutY="42.0" text="Password Recovery">
               <font>
                  <Font name="Fira Sans Compressed Heavy" size="34.0" />
               </font>
            </Label>
            <Label layoutX="108.0" layoutY="90.0" text="Fill the form to recover password">
               <font>
                  <Font name="Fira Sans Compressed Medium" size="17.0" />
               </font>
            </Label>
            <TextField fx:id="AccountNo" layoutX="57.0" layoutY="142.0" prefHeight="38.0" prefWidth="340.0" promptText="Your Account No" styleClass="field-decoration" stylesheets="@../design/design.css">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="Ans" layoutX="57.0" layoutY="272.0" prefHeight="38.0" prefWidth="340.0" promptText="Answer" styleClass="field-decoration" stylesheets="@../design/design.css">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <ComboBox fx:id="Security" layoutX="57.0" layoutY="205.0" prefHeight="38.0" prefWidth="340.0" promptText="Security Questions" styleClass="field-decoration" stylesheets="@../design/design.css" />
            <Button layoutX="100.0" layoutY="373.0" mnemonicParsing="false" onMouseClicked="#passwordRecovery" prefHeight="35.0" prefWidth="250.0" styleClass="login-button" stylesheets="@../design/design.css" text="Password Recovery ">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </content>
</ScrollPane>
